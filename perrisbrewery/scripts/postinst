#!/bin/sh
# postinst script for eggs-7.8.13
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package
# echo ">>> $0 $1 $2 $3 $4<<<"

case "$1" in
    configure)
        # adapt in /usr/bin
        if [ -f "/usr/lib/penguins-eggs/addons/eggs/adapt/bin/adapt" ]; then
            install /usr/lib/penguins-eggs/addons/eggs/adapt/bin/adapt /usr/bin
        fi

        # love in /usr/bin
        if [ -f "/usr/lib/penguins-eggs/scripts/love" ]; then
            install /usr/lib/penguins-eggs/scripts/love /usr/bin
        fi

        # resy
        if [ -f "/usr/lib/penguins-eggs/scripts/resy" ]; then
            install /usr/lib/penguins-eggs/scripts/resy /usr/sbin
        fi

        # Adding bash-completion Debian/Devuan/Ubuntu /etc/bash_completion.d/
        if [ -d "/etc/bash_completion.d/" ]; then
            if [ -f "/usr/lib/penguins-eggs/scripts/eggs.bash" ]; then
                cp /usr/lib/penguins-eggs/scripts/eggs.bash /etc/bash_completion.d/
            fi
        fi    

        # Adding bash-completion elementary /usr/share/bash-completion/completions/
        if [ -d "/usr/share/bash-completion/completions/" ]; then
            if [ -f "/usr/lib/penguins-eggs/scripts/eggs.bash" ]; then
                cp /usr/lib/penguins-eggs/scripts/eggs.bash /usr/share/bash-completion/completions/
            fi
        fi    

        # Adding zsh-completion for eggs
        if [ -d "/usr/share/zsh/functions/Completion/Zsh/" ]; then
            if [ -f "/usr/lib/penguins-eggs/scripts/_eggs" ]; then
                cp /usr/lib/penguins-eggs/scripts/_eggs /usr/share/zsh/functions/Completion/Zsh/
            fi
        fi

        # revitalize mom
        if [ -f "/usr/lib/penguins-eggs/scripts/mom.sh" ]; then  
            chmod +x /usr/lib/penguins-eggs/scripts/mom.sh
        fi

        # revitalize eui
        if [ -d "/usr/lib/penguins-eggs/eui" ]; then  
            chmod +x /usr/lib/penguins-eggs/eui/eui-create-image.sh
            chmod +x /usr/lib/penguins-eggs/eui/eui-start.sh
            chmod 0400 /usr/lib/penguins-eggs/eui/eui-users
        fi

        # Adding man page
        if [ ! -d "/usr/share/man/man1" ]; then
            mkdir /usr/share/man/man1 -p
        fi
        if [ -f "/usr/lib/penguins-eggs/manpages/doc/man/eggs.1.gz" ]; then
            cp /usr/lib/penguins-eggs/manpages/doc/man/eggs.1.gz /usr/share/man/man1
        fi

        eggs config --nointeractive
        echo "eggs was installed..." 
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
